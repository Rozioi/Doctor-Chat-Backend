
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:postgres@localhost:5432/doctor_chat_db"
}

model User {
  id            Int            @id @default(autoincrement())
  telegramId    String         @unique
  username      String?
  firstName     String?
  phoneNumber   String?
  lastName      String?
  photoUrl      String?
  role          Role           @default(PATIENT)
  createdAt     DateTime       @default(now())
  doctorProfile DoctorProfile?
  chats         Chat[]         @relation("PatientChats")
  doctorChats   Chat[]          @relation("DoctorChats")
  balance       Balance?
  payments      Payment[]
  pdfDocuments  PDFDocument[]
  reviewsGiven  Review[]        @relation("ReviewAuthor")
  reviewsReceived Review[]       @relation("ReviewDoctor")
}

model DoctorProfile {
  id              Int      @id @default(autoincrement())
  user            User     @relation(fields: [userId], references: [id])
  userId          Int      @unique
  specialization  String
  qualification   String
  experience      Int // Years of experience
  description     String   @db.Text
  education       String
  certificates    String[] // Array of certificate URLs or descriptions
  rating          Float?   @default(0)
  country         String
  consultationFee Decimal  @db.Decimal(10, 2)
  isAvailable     Boolean  @default(true)
  cardNumber      String?  // Номер карты для вывода средств
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  reviews         Review[]
}

model Chat {
  id            Int      @id @default(autoincrement())
  patientId     Int
  doctorId      Int
  patient       User     @relation("PatientChats", fields: [patientId], references: [id])
  doctor        User     @relation("DoctorChats", fields: [doctorId], references: [id])
  telegramChatId String? // ID чата в Telegram
  serviceType   String   // "consultation" или "analysis"
  amount        Decimal  @db.Decimal(10, 2)
  status        ChatStatus @default(ACTIVE)
  payments      Payment[]
  pdfDocuments  PDFDocument[] @relation("ChatPDFDocuments")
  reviews       Review[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum Role {
  PATIENT
  DOCTOR
  ADMIN
}

enum ChatStatus {
  ACTIVE
  COMPLETED
  CANCELLED
}

model Balance {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount    Decimal  @default(0) @db.Decimal(10, 2)
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model Payment {
  id            Int          @id @default(autoincrement())
  userId        Int
  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  chatId        Int?
  chat          Chat?        @relation(fields: [chatId], references: [id], onDelete: SetNull)
  amount        Decimal      @db.Decimal(10, 2)
  paymentMethod PaymentMethod
  status        PaymentStatus @default(PENDING)
  description   String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model PDFDocument {
  id            Int          @id @default(autoincrement())
  filename      String       // Имя файла на диске
  originalName  String       // Оригинальное имя файла
  filePath      String       // Путь к файлу на сервере
  fileSize      Int          // Размер файла в байтах
  mimeType      String       @default("application/pdf")
  documentType PDFDocumentType
  userId        Int?         // Владелец документа (опционально)
  user          User?        @relation(fields: [userId], references: [id], onDelete: SetNull)
  chatId        Int?         // Связанный чат (опционально)
  chat          Chat?        @relation("ChatPDFDocuments", fields: [chatId], references: [id], onDelete: SetNull)
  metadata      Json?        // Дополнительные метаданные в JSON
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([userId])
  @@index([chatId])
  @@index([documentType])
}

enum PaymentMethod {
  BALANCE
  CARD
  BANK_TRANSFER
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELLED
  REFUNDED
}

enum PDFDocumentType {
  ANALYSIS_RESULT
  CONSULTATION_REPORT
  PRESCRIPTION
  MEDICAL_CERTIFICATE
  OTHER
}

model Review {
  id          Int      @id @default(autoincrement())
  patientId   Int
  doctorId    Int
  doctorProfileId Int
  chatId      Int?
  patient     User     @relation("ReviewAuthor", fields: [patientId], references: [id])
  doctor      User     @relation("ReviewDoctor", fields: [doctorId], references: [id])
  doctorProfile DoctorProfile @relation(fields: [doctorProfileId], references: [id])
  chat        Chat?    @relation(fields: [chatId], references: [id])
  rating      Int      // 1-5
  comment     String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([doctorProfileId])
  @@index([patientId])
  @@index([chatId])
}
